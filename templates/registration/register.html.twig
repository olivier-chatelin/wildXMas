{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% include 'components/_header.html.twig' %}

    <div class="container w-25">
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.isRemote) }}
            {{ form_row(registrationForm.isFrench) }}

            <button type="submit" class="btn btn-primary text-white m-1">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

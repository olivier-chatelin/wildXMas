{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% include 'components/_header.html.twig' %}

    <a class="btn btn-primary text-white" href={{ path('admin_reward_new')}} >New Reward</a>
    <div class="interact-zone d-flex">
        <div class="reward-container d-flex flex-wrap w-50 border">
            {% for reward in rewards %}
            <a class="link" href={{ path('admin_reward_update',{id:reward.id}) }}>
               <div class="reward-inlist m-1">
                    {% include 'components/_reward.html.twig' %}
               </div>
            </a>
            {% else %}
                No reward
            {% endfor %}
        </div>
        <div class="dropzone w-50 border">

        </div>
    </div>

{% endblock %}